<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreForQuizActivity">

<LinearLayout
    android:id="@+id/vertLayout"
    android:layout_width="0dp"
    android:layout_height="587dp"
    android:layout_marginBottom="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0">

    <LinearLayout
        android:id="@+id/sdpvocabLogoLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/sdpvocabLogo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@drawable/sdpvocab_title_image"
            tools:ignore="ContentDescription" />

    </LinearLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/scoreForQuizBannerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/scoreForQuizBanner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@drawable/border"
            android:contentDescription=""
            android:gravity="center"
            android:text="@string/score_for_quiz_banner"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="26sp"
            android:textStyle="bold"
            tools:text="Score for Quiz" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/studentUsernameLayout"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/studentUsernameLabel"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:gravity="center|start"
            android:labelFor="@+id/studentUsername"
            android:text="@string/username"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Username:" />

        <EditText
            android:id="@+id/studentUsername"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:background="@drawable/border_white"
            android:contentDescription=""
            android:focusable="false"
            android:inputType="text"
            android:maxLength="18"
            android:selectAllOnFocus="false"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/quizScoreLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/quizScoreLabel"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:contentDescription=""
            android:gravity="center|start"
            android:labelFor="@+id/quizScore"
            android:text="@string/quiz_score"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:text="Score:" />

        <EditText
            android:id="@+id/quizScore"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autofillHints=""
            android:background="@drawable/border_white"
            android:contentDescription=""
            android:focusable="false"
            android:inputType="number"
            android:maxLength="18"
            android:selectAllOnFocus="false"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            tools:targetApi="o" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/returnMainMenuLayout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        android:gravity="bottom|center_horizontal"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="155dp">

        <Button
            android:id="@+id/returnMainMenuButton"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border"
            android:contentDescription=""
            android:text="@string/main_menu_btn"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textColorLink="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>

</android.support.constraint.ConstraintLayout>